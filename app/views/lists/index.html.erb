<%= render "flash"  %>

<% content_for :title, "Lists" %>
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">My To-Do Lists</h1>
  <%= link_to new_list_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-lg"></i> New List
  <% end %>
</div>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th class="text-start">Description</th>
            <th class="text-center">Status</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td class="align-middle"><%= list.description %></td>
              <td class="text-center align-middle">
                <% if list.completed %>
                  <span class="badge bg-success">Completed</span>
                <% else %>
                  <span class="badge bg-warning">Pending</span>
                <% end %>
              </td>
              <td class="text-end">
                <div class="btn-group">
                  <%= link_to list, class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> View
                  <% end %>
                  <%= link_to edit_list_path(list), class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i> Edit
                  <% end %>
                  <%= link_to list, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                    <i class="bi bi-trash"></i> Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @lists.empty? %>
  <div class="text-center my-5">
    <p class="text-muted">No lists found. Create your first todo list!</p>
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
  </div>
<% end %>
