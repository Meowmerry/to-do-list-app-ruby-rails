<% if notice.present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="card mb-4">
  <div class="card-body">
    <%= render @list %>
  </div>
</div>

<div class="d-flex align-items-center gap-3 mb-4">
  <%= link_to lists_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to Lists
  <% end %>
  <%= link_to edit_list_path(@list), class: "btn btn-primary" do %>
    <i class="bi bi-pencil"></i> Edit List
  <% end %>
</div>

<div class="mt-4">
  <%= button_to @list, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this list?" } do %>
    <i class="bi bi-trash"></i> Delete List
  <% end %>
</div>
